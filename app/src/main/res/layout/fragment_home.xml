<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Poster Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="16dp">

                <!-- Cream rounded background -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="191dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="#9B958B"
                    android:clipToOutline="true" />

                <TextView
                    android:id="@+id/quoteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="24dp"
                    android:text="Loading motivation..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:gravity="center" />
            </FrameLayout>

            <!-- Routine Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/myRoutineTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Routine"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/addRoutineBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="Add Routine"
                    android:textAllCaps="false"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#FFD600" />

                <!-- Dropdown -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/myRoutineDropdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Routine (0)"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="4dp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- Dynamic Routine List -->
                <LinearLayout
                    android:id="@+id/routineListContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />

                <!-- Placeholder if no routines exist -->
                <TextView
                    android:id="@+id/noRoutineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No routine added yet"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>