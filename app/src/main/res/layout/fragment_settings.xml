<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Personal Info Layout -->
        <LinearLayout
            android:id="@+id/personalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#2A2A2A"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnChangePicture"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/grey_400"
                android:text="Change Profile Photo"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <!-- Account Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Info"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/accountEmailOrPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: example@email.com"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/accountUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username: user"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_marginBottom="24dp" />

            <!-- Password Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Change Password Section -->
            <EditText
                android:id="@+id/currentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:inputType="textPassword"
                android:backgroundTint="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:inputType="textPassword"
                android:backgroundTint="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:inputType="textPassword"
                android:backgroundTint="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/grey_400"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password Requirements:\n• At least 10 characters\n• Include uppercase and lowercase\n• Include a number\n• Include a special character"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sign out of your account here:"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnSignOut"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="Sign Out"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:backgroundTint="#FFD600" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you want to delete your account and all data associated with it?"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnDeleteAccount"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Delete Account"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:backgroundTint="#D32F2F" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
