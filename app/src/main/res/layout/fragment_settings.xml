<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Switch Tabs -->
        <LinearLayout
            android:id="@+id/switchTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2A2A2A"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textAllCaps="false"
                android:backgroundTint="#444444"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/btnEmailPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emails and Passwords"
                android:textAllCaps="false"
                android:backgroundTint="#2A2A2A"
                android:textColor="#AAAAAA" />
        </LinearLayout>

        <!-- Personal Info Layout -->
        <LinearLayout
            android:id="@+id/personalLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#2A2A2A"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Profile Picture Placeholder -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/personicon"
                android:tint="#AAAAAA"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnChangePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Picture"
                android:textAllCaps="false"
                android:backgroundTint="#FFD600"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Fields -->
            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:backgroundTint="#555555"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:backgroundTint="#555555"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email or Phone"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:backgroundTint="#555555"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <RadioGroup
                android:id="@+id/themeGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/btnLightMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/btnDarkMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Email & Password Layout -->
        <LinearLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#2A2A2A"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emails and Password"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password:"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/currentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:inputType="textPassword"
                android:backgroundTint="#555555"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:inputType="textPassword"
                android:backgroundTint="#555555"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:inputType="textPassword"
                android:backgroundTint="#555555"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password Requirements:\n• At least 10 characters\n• Include uppercase and lowercase\n• Include a number\n• Include a special character"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sign out of your account here:"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnSignOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"
                    android:textColor="#000000"
                    android:backgroundTint="#FFD600" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you want to delete your account and all data associated with it?"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnDeleteAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D32F2F" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
