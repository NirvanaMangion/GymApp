<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- Circular Profile Picture with icon inside -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/circle_background"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/personicon"
                android:layout_gravity="center"
                android:contentDescription="Profile Icon" />
        </FrameLayout>

        <!-- Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- No Data Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:background="#1E1E1E"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No data yet"
                android:textColor="#888888"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Duration / Volume / Reps Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnDuration"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Duration"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:backgroundTint="#FFD600"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnVolume"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Volume"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                android:backgroundTint="#333333"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnReps"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Reps"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                android:backgroundTint="#333333"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Dashboard Title (left-aligned, bigger) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="#888888"
            android:textSize="20sp"
            android:layout_marginBottom="12dp" />

        <!-- Dashboard Buttons (Lighter Grey: #4D4D4D) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textAllCaps="false"
                android:backgroundTint="#4D4D4D"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercises"
                android:textAllCaps="false"
                android:backgroundTint="#4D4D4D"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Measures"
                android:textAllCaps="false"
                android:backgroundTint="#4D4D4D"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
