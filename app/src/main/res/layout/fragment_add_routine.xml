<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Routine Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Routine Name"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/routineNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. Push Day"
        android:background="#1E1E1E"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:padding="12dp"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Add Exercise -->
    <Button
        android:id="@+id/addExerciseBtn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Exercise"
        android:textAllCaps="false"
        android:backgroundTint="#4D4D4D"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- Scrollable list of added exercises -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/routineExerciseContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </ScrollView>

    <!-- Save Button (fixed at bottom) -->
    <Button
        android:id="@+id/saveRoutineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFD600"
        android:text="Save"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />
</LinearLayout>
